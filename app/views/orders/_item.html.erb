<tr>
  <td>
    <%= image_tag product.image.tiny %>
  </td>
  <td>
    <h4><%= product.name %></h4>
    <br>
    <p><%= product.description %></p>
  </td>
  <td>
  Product Price:
    <%= product.price %>
    <br>
  </td>
  <td>
    Quantity:
    <%= quantity %>
    <br>
  </td>
  <td>
  Total:
    <%= product.price * quantity %>
  </td>
</tr>
